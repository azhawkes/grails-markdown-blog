<plugin name='markdown-blog' version='0.1' grailsVersion='2.2.4 &gt; *'>
  <author>Andy Hawkes</author>
  <authorEmail>andy@andyhawkes.com</authorEmail>
  <title>Markdown Blog Plugin</title>
  <description>Simple Markdown blog and content editor for embedding in Grails apps.
</description>
  <documentation>http://grails.org/plugin/markdown-blog</documentation>
  <type>MarkdownBlogGrailsPlugin</type>
  <resources>
    <resource>com.sourcerefinery.markdownblog.MarkdownBlogAdminController</resource>
    <resource>com.sourcerefinery.markdownblog.MarkdownBlogController</resource>
    <resource>com.sourcerefinery.markdownblog.MarkdownBlogPost</resource>
    <resource>markdown.blog.MarkdownBlogTagLib</resource>
  </resources>
  <repositories>
    <repository name='grailsCentral' url='http://grails.org/plugins' />
    <repository name='mavenCentral' url='http://repo1.maven.org/maven2/' />
  </repositories>
  <dependencies>
    <compile>
      <dependency group='org.codehaus.jackson' name='jackson-core-asl' version='1.8.9' />
      <dependency group='mysql' name='mysql-connector-java' version='5.1.24' />
    </compile>
  </dependencies>
  <plugins>
    <compile>
      <plugin group='org.grails.plugins' name='platform-core' version='1.0.RC5' />
      <plugin group='org.grails.plugins' name='markdown' version='1.0.0.RC1' />
      <plugin group='org.grails.plugins' name='rest' version='0.7' />
      <plugin group='org.grails.plugins' name='executor' version='0.3' />
      <plugin group='org.grails.plugins' name='stripe' version='2.2' />
      <plugin group='org.grails.plugins' name='twitter-bootstrap' version='3.0.0' />
      <plugin group='org.grails.plugins' name='asynchronous-mail' version='1.0-RC5' />
      <plugin group='org.grails.plugins' name='cache' version='1.0.1' />
      <plugin group='org.grails.plugins' name='remoting' version='1.3' />
      <plugin group='org.grails.plugins' name='mail' version='1.0.1' />
      <plugin group='org.grails.plugins' name='quartz' version='1.0-RC9' />
    </compile>
    <runtime>
      <plugin group='org.grails.plugins' name='spring-security-core' version='1.2.7.3' />
      <plugin group='org.grails.plugins' name='zipped-resources' version='1.0' />
      <plugin group='org.grails.plugins' name='database-migration' version='1.3.2' />
      <plugin group='org.grails.plugins' name='resources' version='1.2.1' />
      <plugin group='org.grails.plugins' name='aws-sdk' version='1.4.2' />
      <plugin group='org.grails.plugins' name='jquery' version='1.8.3' />
      <plugin group='org.grails.plugins' name='hibernate' version='2.2.4' />
      <plugin group='org.grails.plugins' name='retina' version='1.0.1' />
      <plugin group='org.grails.plugins' name='cache-headers' version='1.0.4' />
      <plugin group='org.grails.plugins' name='cached-resources' version='1.0' />
    </runtime>
    <build>
      <plugin group='org.grails.plugins' name='tomcat' version='2.2.4' />
    </build>
  </plugins>
  <runtimePluginRequirements />
  <behavior />
</plugin>